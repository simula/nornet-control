# NorNet
from NorNetSiteSetup import *
from NorNetTools     import *
from NorNetAPI       import *



# ###### Main program #######################################################
loginToPLC(quietMode = True)

userList = fetchNorNetUser(None)
for userID in userList:
   user = userList[userID]
   # print(user)

   print('{:32} {:1}, {:1}'.format(
      user['user_email'],
      user['user_last_name'],
      user['user_first_name']
   ))
