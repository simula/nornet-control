#!/bin/bash -e


CONTAINER="jammy"
IMAGE="dreibh/nornet-ubuntu:22.04"
DIRECTORY="${CONTAINER}"
LOCALVERSION="-mptcp"

# ====== Configure ==========================================================
pushd ${HOME}/src/multipath/mptcp-kernel >/dev/null
echo "Cleaning sources ..."
sudo git clean -dfx --quiet
echo "Configuring build ..."
cat /boot/config-`uname -r` ~/src/nornet/planetlab-kernel/config-planetlab >.config && make config </dev/null >/dev/null 2>&1
ls -l .config
popd >/dev/null

# ====== Build ==============================================================
docker rm -f ${CONTAINER} >/dev/null 2>&1 || true

echo "RSync'ing sources ..."
pushd ${DIRECTORY} >/dev/null
sudo git clean -dfx --quiet
popd >/dev/null
echo "rsync -a --delete ${HOME}/src/multipath/mptcp-kernel/ ${DIRECTORY}/"
rsync -a --delete ${HOME}/src/multipath/mptcp-kernel/ ${DIRECTORY}/

echo "Staring build ..."
docker run --rm -it --name ${CONTAINER} \
   --volume `realpath ${DIRECTORY}`:/home/nornetpp/src/mptcp-kernel \
   ${IMAGE} \
   bash -c "\
cd /home/nornetpp/src/mptcp-kernel && \
apt install -y rsync kmod cpio bison flex libssl-dev libelf-dev pahole && \
pwd && \
id && \
export MAKEFLAGS="${MAKEFLAGS}" && \
bash
" && echo "OK" || echo "BAD"

# make deb-pkg LOCALVERSION=\"${LOCALVERSION}\" && \
