ntp4=`grep "^server" /etc/ntp.conf | grep -v ':' | awk '{ print $2; }'`
ntp6=`grep "^server" /etc/ntp.conf | grep ':'    | awk '{ print $2; }'`


echo "Running in parallel ..."
for ntp in $ntp4 $ntp6 ; do
   ntpdate -q $ntp >/tmp/$ntp.out 2>&1 &
done
wait
for ntp in $ntp4 $ntp6 ; do
   echo -e "\x1b[32m----- $ntp -----\x1b[0m"
   cat /tmp/$ntp.out
   rm -f /tmp/$ntp.out
done
